{
  "name": "playwright_ui_automation",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:allure": "playwright test --reporter=allure-playwright",
    "allure:generate": "allure generate ./allure-results --clean",
    "allure:open": "allure open ./allure-report",
    "allure:report": "npm run allure:generate && npm run allure:open",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:mcp": "playwright test --workers=1 --headed",
    "test:ai": "playwright test tests/aiTest.spec.js --headed",
    "show-report": "playwright show-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.54.2",
    "@playwright/mcp": "^0.0.33",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3",
    "playwright-core": "^1.54.2"
  }
}
